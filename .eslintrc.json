{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module",
		"ecmaFeatures": {
			"arrowFunctions": true,
		"jsx": true,
		"spread": true
		}
	},
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"no-console": [
			"error",
			{ "allow": [
					"warn",
					"error"
				]
			}
		],
		"indent": [
			"error",
			2
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
